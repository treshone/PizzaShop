<h2>Cart page</h2>

<table class="table table-striped"> 
	<thead> 
		<tr>
			<th>Name</th>
			<th>Qty</th> 
			<th>Price</th> 
		</tr> 
	</thead> 
	<tbody> 
	<% total_price = 0 %>
	<% total_qty = 0 %>	
	<% @items.each do |item| %>	
		<tr> 
			<td><%= item[0].title %></td>  
			<td><%= item[1] %></td>
			<td><%= item[0].price %></td> 
		</tr>
		<% total_price += item[0].price * item[1].to_i %>
		<% total_qty += item[1].to_i %> 
	<% end %>
		
		<tr>
			<td>Total:</td>
			<td><%= total_qty %></td>
			<td><%= total_price %></td>
		</tr>

	</tbody> 
</table>

<form action="/place_order" method="POST" role="form">
	
	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

	<div class="form-group">
    	<label>Name</label>
    	<input name="order[name]" type="text" class="form-control" placeholder="Your name">
  	</div>

  	<div class="form-group">
    	<label>Phone</label>
    	<input name="order[phone]" type="text" class="form-control" placeholder="Your phone number">
  	</div>

  	<div class="form-group">
    	<label>Delivery address</label>
    	<textarea name="order[address]" type="text" class="form-control" placeholder="Delivery address"></textarea>
  	</div>

  	<button type="submit" class="btn btn-success btn-lg">Place your order!</button>
  	<button class="btn btn-danger btn-lg" onclick="return cancel_order();">Cancel</button>

</form>